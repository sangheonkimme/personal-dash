# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Production Environment Variables
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 프로덕션 배포 시 필요한 환경변수 템플릿입니다.
# Render, Vercel 등의 환경변수 설정에서 이 값들을 설정하세요.
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Database Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# PostgreSQL 데이터베이스 연결 문자열
# Render PostgreSQL의 External Connection String을 사용하세요
DATABASE_URL="postgresql://user:password@host:5432/database"

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# NextAuth Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 프로덕션 도메인 (HTTPS 필수)
# 예: https://personal-dash.onrender.com
NEXTAUTH_URL="https://yourdomain.com"

# NextAuth Secret (보안키)
# 생성: openssl rand -base64 32
NEXTAUTH_SECRET="your-random-secret-key-here-minimum-32-characters"

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Google OAuth Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Google Cloud Console에서 발급받은 OAuth 2.0 Client ID
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# Google Cloud Console에서 발급받은 OAuth 2.0 Client Secret
GOOGLE_CLIENT_SECRET="GOCSPX-your-google-client-secret"

# ⚠️  중요: Google OAuth 설정 시 승인된 리디렉션 URI 추가 필수
# - https://yourdomain.com/api/auth/callback/google

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Application Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Node 환경 (production 필수)
NODE_ENV="production"

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 배포 체크리스트
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ✅ DATABASE_URL 설정 완료
# ✅ NEXTAUTH_URL을 프로덕션 도메인으로 설정
# ✅ NEXTAUTH_SECRET 생성 및 설정 (최소 32자)
# ✅ Google OAuth Client ID/Secret 설정
# ✅ Google Cloud Console에서 리디렉션 URI 추가
# ✅ NODE_ENV=production 설정
# ✅ 환경변수 검증 스크립트 실행: pnpm check:env
